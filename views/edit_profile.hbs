<html>
    <head>
        <link rel="stylesheet" type="text/css" href="css/mp1.css">
    </head>
    
    <body>
        <div class="main-menu">
			<div class="logo">
				<img src="photo/Logo.PNG">
			</div>

			<a href="home.html">Home</a>
			<div class="locker-menu">
				<button class="locker-menu-button">Locker</button>
				<div id="locker-menu-contents">
					<a href="current-locker">View current locker</a>
					<a href="view-lockers">View lockers and reserve a locker</a>
				</div>
			</div>

			<span id="space"></span>
			<div class="user-menu">
				<button class="user-menu-button">{{idNo}}</button>
				<div id="user-menu-contents">
					<a onclick="goToProfile();">Profile</a>
					<a href="logout">Log Out</a>

					<form id="profile-hidden" action="profile" method="post">
						<input type="hidden" value="{{idNo}}" id="id-no" name="idNo">
						<input type="hidden" value="{{password}}" id="password" name="password">
					</form>
				</div>
			</div>
		</div>
        
		<div class="edit-profile-box">
			<div class="profile-box">
				<div class="info-section">
					<div id="personal-info">
						<h1>Edit Profile</h1>
						<h2>{{user.idNo}}</h2>
						<form id="edit" action="confirm-edit-profile" method="post">
							<div><label><b>Full Name</b></label><br> <input type="text" name="realName" value="{{user.realName}}"></div>
							<div><label><b>Degree Program</b></label><br> <input type="text" name="degree" value="{{user.degree}}"></div>
							<div><label><b>E-mail Address</b></label><br> <input type="text" name="email" value="{{user.email}}"></div>
							<div><label><b>Mobile Contact Number</b><br></label><input type="text" name="mobileNo" value="{{user.mobileNo}}"></div>
							<input type="submit" value="Confirm Edit"><br>
						</form>
					</div>
				</div>
				

				<div id="locker-info">
					<div id="locker">
						<h3>Current locker</h3>
						<table id="locker-visual">
							<tr>
								<td><img src="IMG_8380.PNG"></td>
							</tr>
							<tr>
								<td>110,
								St. La Salle Hall</td>
							</tr>
							<tr>
								<td>Locker Code: 10239</td>
							</tr>
						</table>
					</div>
				</div>
			</div>

		</div>
		
        
        
    </body>
</html>